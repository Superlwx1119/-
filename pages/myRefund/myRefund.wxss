.box{
  background:rgba(245,245,245,1);
  /* padding-top: 24rpx; */
  height: 100vh;
  padding-top: 14rpx;
  padding-bottom: 88rpx;
  box-sizing: border-box;
}
.background{
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 14rpx rgba(204,204,204,0.2);
  border-radius:16rpx;
  padding: 28rpx;
  width: 686rpx;
  box-sizing: border-box;
  margin: 12rpx auto;
  /* margin-bottom: 24rpx; */
}
.weui-tabs{
  overflow: hidden;
}
.weui-tabs-bar__item{
  width: 50%;
  text-align: center;
  background:rgba(245,245,245,1) !important;
  border: 2px solid rgba(245,245,245,1);
}

.weui-tabs-bar__title,.tab-bar-title{
  font-size: 28rpx !important;
  padding-bottom: 10rpx !important;
}
.tab-content{
  display: flex;
}
.tab-bar-title__selected {
  color: #57D679;
}
.swiperClass{
  height: 0;
}
.goodsMsg{
  display: flex;
  flex-direction: column;
}
.state{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}
.state text{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:40rpx;
  color:rgba(51,51,51,1);
}
.state view{
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 20rpx;
  height:44rpx;
  background:rgba(87,214,121,1);
  border-radius:22rpx;
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:28rpx;
  color:rgba(255,255,255,1);
}
.goodImg{
  width: 164rpx;
  height: 164rpx;
  margin-right: 20rpx;
}
.goodsText{
  display: flex;
  flex: 1;
  flex-direction: column;
}
.goodsText image{
  width: 40rpx;
  height: 40rpx;
}
.goodsText >text{
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:28rpx;
  color:rgba(102,102,102,1);
}
.goodsText text:first-child{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  line-height:40rpx;
  color:rgba(51,51,51,1);
}
.refundMsg{
  display: flex;
  margin: 12rpx 0;
}
.goodsName{
  width: 400rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.reNum{
  display: flex;
  align-items: center;
  flex: 1;
  justify-content: space-between;
  
}
.reNum>text{
  font-size:24rpx !important;
  font-family:PingFang SC;
  font-weight:400;
  line-height:34rpx;
  color:rgba(153,153,153,1) !important;
}
.num{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 144rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:34rpx;
  color:rgba(51,51,51,1);
}
.statusC{
  background:rgba(204,204,204,1) !important;
}
.statusR{
  background:rgba(255,86,66,1) !important;
}
.statusA{
  color:white !important;
}