/* 字体图标 */
@import "../../pages/css/icon.wxss";

/* 清除浮动 */

.clearfix:after {
  content: '';
  display: block;
  clear: both;
  visibility: hidden;
  line-height: 0;
  height: 0;
  overflow: hidden;
}

/* 去掉滚动条 */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.fuhao{
   font-size: 26rpx;
}
/* head */

.container {
  background: #f0f2f5;
}

.header {
  background: #fff;
  margin-bottom: 30rpx;
}

.header .order-pay {
  width: 100%;
  padding: 60rpx 0;
  border-bottom: 1px solid #e3e3e3;
  text-align: center;
}

.header .order-pay .order-title {
  margin: 20rpx 0 25rpx;
  font-size: 30rpx;
  color: #18191a;
  font-weight: 400;
}

.header .order-pay .order-price {
  font-size: 48rpx;
  color: #000;
}
.header .order-content{
  padding: 30rpx;
}
.header .order-content .order-item{
  font-size: 28rpx;
  color: #000;
  height: 45rpx;
  line-height: 45rpx;
}
.header .order-content .order-item .order-left{
  color: #999;
  font-weight: 400;
}
.header .order-content .order-item .order-status{
  color: #008cff;
}
.goods {
  width: 100%;
  background: #fff;
  padding-top: 20rpx;
}

.goods .foods-wrapper .food-list .title {
  padding-left: 14px;
  height: 26px;
  line-height: 26px;
  border-left: 2px solid #d9dde1;
  font-size: 12px;
  color: rgb(147, 153, 159);
  background: #f3f5f7;
}

.goods .foods-wrapper .food-list .food-item {
  display: flex;
  margin: 24rpx 30rpx;
  padding-bottom: 20rpx;
  position: relative;
  border-bottom: 1px solid #e3e3e3;
}

.goods .foods-wrapper .food-list .food-item:last-child {
  border: none;
  margin-bottom: 0px;
}

.goods .foods-wrapper .food-list .food-item .icon {
  flex: 0 0 57px;
  margin-right: 10px;
}

.goods .foods-wrapper .food-list .food-item .icon .icon-img {
  width: 150rpx;
  height: 150rpx;
}

.goods .foods-wrapper .food-list .food-item .content {
  flex: 1;
  position: relative;
}

.goods .foods-wrapper .food-list .food-item .content .txt {
  height: 70rpx;
}

.goods .foods-wrapper .food-list .food-item .content .name {
  width: 400rpx;
  margin: 6rpx 0 0;
  font-size: 32rpx;
  font-weight: 700;
  line-height: 40rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.goods .foods-wrapper .food-list .food-item .content .price {
  font-weight: 700;
  line-height: 48rpx;
  margin-right: 8rpx;
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #008cff;
}

.goods .foods-wrapper .food-list .food-item .content .cartControl-wrapper {
  position: absolute;
  right: 0;
  bottom: 12rpx;
}

.goods .foods-wrapper .food-list .food-item .content .cartControl-wrapper .cart-count {
  display: inline-block;
  font-size: 30rpx;
  font-weight: 400;
  text-align: center;
  color: #000;
}

.pay {
  width: 100%;
  background: #f0f2f5;
  padding-top: 30rpx;
  padding-bottom: 80rpx;
  color: #333;
}

.pay .pay-box {
  background: #fff;
  border-bottom: 1px solid #e3e3e3;
  font-size: 28rpx;
  font-weight: 400;
  padding: 30rpx;
}

.pay .pay-box .pay-count {
  height: 50rpx;
  line-height: 50rpx;
}

.pay .pay-box .pay-title {
  float: left;
}

.pay .pay-box .pay-numb {
  float: right;
  color: #f62d2d;
  font-weight: 700;
}

.pay .pay-money {
  background: #fff;
  padding-right: 30rpx;
  text-align: right;
  height: 98rpx;
  line-height: 98rpx;
  font-size: 32rpx;
  font-weight: 400;
}

.pay .pay-money .pay-price {
  color: #f62d2d;
   font-weight: 700;
}

.pay .pay-btn {
  height: 88rpx;
  line-height: 88rpx;
  border-radius:12rpx;
  font-size: 32rpx;
  color: #fff;
  background: #218EE6;
  text-align: center;
  margin:30rpx 30rpx 0;
}
