.box{
  background:rgba(245,245,245,1);
  padding-top: 24rpx;
  height: 100vh;
  box-sizing: border-box;
}
.background{
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 14rpx rgba(204,204,204,0.2);
  border-radius:16rpx;
  padding: 28rpx;
  width: 686rpx;
  box-sizing: border-box;
  margin: 0 auto;
  margin-bottom: 24rpx;
}
.code{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.code text{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:40rpx;
  color:rgba(51,51,51,1);
}
.code .sendding{
  width:104rpx;
  height:44rpx;
  background:rgba(87,214,121,1);
  opacity:1;
  border-radius:22rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:28rpx;
  color:rgba(255,255,255,1);
}
.code .noPay{
  height:34rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:34rpx;
  color:rgba(255,86,66,1);
}
.address{
  display: flex;
  flex-direction: column;
}
.address image{
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}
.address view{
  font-size:28rpx;
  font-family:PingFang SC;
  display: flex;
  margin: 11rpx 0;
  font-weight:400;
  line-height:40rpx;
  color:rgba(51,51,51,1);
}

.goodsList{
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;

}
.goodsList image{
  width: 164rpx;
  height: 164rpx;
  margin-right: 20rpx;
}
.goodMsg{
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-between;
}
.goodMsg>text{
  font-size:24rpx;
  font-family:PingFangSC-Medium;
  line-height:34rpx;
  color:rgba(153,153,153,1);
}
.goodMsg>text:first-child{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:40rpx;
  color:rgba(51,51,51,1);
  display: inline-block;
  width: 400rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.msg{
  display: flex;
  flex: 1;
  justify-content: space-between;
  align-items: center;
}
.msg>text{
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:28rpx;
  color:rgba(153,153,153,1);
}
.money{
  flex: 1;
}
.money text{
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:34rpx;
  color:rgba(255,86,66,1);
}
.money text:last-child{
  text-decoration: line-through;
  color:rgba(153,153,153,1);
  display: inline-block;
  margin-left: 8rpx;
}
.down{
  margin: 0 auto;
}
.down image{
  width: 40rpx;
  height: 40rpx;
  display: block;
  margin: 0 auto;
}
.total{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.total >view{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  border-bottom:1px solid rgba(151,151,151,0.5019607843137255);
}
.total>text{
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:34rpx;
  color:rgba(102,102,102,1)
}
.total >view>text{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:40rpx;
  color:rgba(51,51,51,1);
}
.total >view>view text{
  font-size:28rpx;
  font-family:PingFangSC-Medium;
  line-height:40rpx;
  color:rgba(255,86,66,1);
}
.total >view>view text:first-child{
  font-size:24rpx;
  display: inline-block;
  margin-right: 10rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:34rpx;
  color:rgba(51,51,51,1);
}
