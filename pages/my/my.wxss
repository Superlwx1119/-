.box{
  background: rgba(245,245,245,1);
}
.background{
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 14rpx rgba(204,204,204,0.2);
  border-radius:16rpx;
  padding: 28rpx;
  width: 686rpx;
  box-sizing: border-box;
  margin: 0 auto;
  margin-bottom: 24rpx;
}
.head{
  background:#57D679;
  height: 200rpx;
  position: relative;
}
.mine{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: -70rpx;
}
.mine image{
  width: 136rpx;
  height: 136rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}
.mine text{
  font-size:36rpx;
  font-family:PingFang SC;
  font-weight:600;
  line-height:50rpx;
  color:rgba(51,51,51,1);
}
.huxing{
  /* background:#57D679; */
  height: 200rpx;
  overflow: hidden;
  position: relative;
  
}
.huxing:after {
  content: '';
  width: 370vw;
  height: 370vw;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 69%;
  border-radius: 50% 50% 0 0;
  background: rgba(245,245,245,1);
}
.body{
  margin-top: 120rpx;
}
.body>text{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:40rpx;
  color:rgba(51,51,51,1);
}
.muOrder{
  display: flex;
  justify-content: space-between;
  padding: 0 24rpx;
  align-items: center;
}
.muOrder view{
  padding-top: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.muOrder image{
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 8rpx;
}
.muOrder text{
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:28rpx;
  color:rgba(153,153,153,1);
}

.otherServe{
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* align-items: center; */
}
.otherServe >text{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:40rpx;
  color:rgba(51,51,51,1);
  display: inline-block;
  margin-bottom: 10rpx;
}
.otherServe >view{
  display: flex;
  align-items: center;
  /* padding: 20rpx 0; */
  height: 96rpx;
  border-bottom: 1px solid rgba(197,197,197,0.5019607843137255);
}
.otherServe >view:last-child{
  border: none;
}
.otherServe>view>text{
  display: inline-block;
  margin-left: 12rpx;
  flex: 1;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:34rpx;
  color:rgba(102,102,102,1);
}
.otherServe image{
  width: 40rpx;
  height: 40rpx;
}
.otherServe .right{
  width: 20rpx;
  height: 20rpx;
}