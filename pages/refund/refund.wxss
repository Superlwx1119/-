.box{
  background:rgba(245,245,245,1);
  padding-top: 24rpx;
  padding-bottom: 124rpx;
  box-sizing: border-box;
}
.background{
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 14rpx rgba(204,204,204,0.2);
  border-radius:16rpx;
  padding: 28rpx;
  width: 686rpx;
  box-sizing: border-box;
  margin: 0 auto;
  margin-bottom: 24rpx;
}
.goodsMsg{
  display: flex;

}
.goodsMsg >image{
  width: 164rpx;
  height: 164rpx;
  margin-right: 20rpx;
}
.goodsText{
  display: flex;
  flex: 1;
  flex-direction: column;
}
.goodsText image{
  width: 40rpx;
  height: 40rpx;
}
.goodsText >text{
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:28rpx;
  color:rgba(102,102,102,1);
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.goodsText text:first-child{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  line-height:40rpx;
  color:rgba(51,51,51,1);
}
.reNum{
  display: flex;
  align-items: center;
  flex: 1;
  justify-content: space-between;
  
}
.reNum>text{
  font-size:24rpx !important;
  font-family:PingFang SC;
  font-weight:400;
  line-height:34rpx;
  color:rgba(153,153,153,1) !important;
}
.num{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 144rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:34rpx;
  color:rgba(51,51,51,1);
}
.money{
  display: flex;
  flex-direction: column;

}
.money view{
  height:40rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  line-height:40rpx;
  color:rgba(51,51,51,1);
  margin-bottom: 16rpx;
}
.money text{
  height:28rpx;
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:28rpx;
  color:rgba(51,51,51,1);
}
.upBox{
  display: inline-block;
}
.upFiles{
  margin-top: 40rpx;
  font-size: 0;
}
.files{
  position: relative;
}
.closeFile{
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}
.files>image{
  margin: 10rpx;
  width:164rpx;
  height:164rpx;
  vertical-align: middle;
}
.doUpload{
  width:164rpx;
  height:164rpx;
  background:rgba(255,255,255,1);
  border:1px dashed rgba(102,102,102,1);
  opacity:1;
  border-radius:6rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:28rpx;
  color:rgba(153,153,153,1);
}
.doUpload image{
  width: 40rpx;
  height: 40rpx;
}
.group{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 28rpx;
}
.group>text{
  height:40rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:40rpx;
  display: inline-block;
  margin-right: 20rpx;
  color:rgba(51,51,51,1);
  width: 25%;
}
.tipText{
  vertical-align: top;
}
.upload >text{
  height:40rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:40rpx;
  display: inline-block;
  margin-right: 20rpx;
  color:rgba(51,51,51,1);
}
.group>view>text,input,textarea{
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:34rpx;
  color:rgba(102,102,102,1);
}
.group>view>input{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:40rpx;
  flex: 1;
  color:rgba(153,153,153,1);
}
.group>view>textarea{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:40rpx;
  padding-top: 6rpx;
  flex: 1;
  color:rgba(153,153,153,1);
}
.note{
  justify-content: flex-start !important;
}
.group image{
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
}

.submit{
  width:560rpx !important;
  height:88rpx;
  background:rgba(87,214,121,1);
  opacity:1;
  border-radius:44rpx;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  left: 50%;
  bottom: 20rpx;
  transform: translateX(-50%);
}

.typeCheck{
  display: flex;
  align-items: center;
}
.typeCheck view{
  flex: 1;
  display: flex;
  align-items: center;
}
.typeCheck image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}
.typeSelected{
  color:rgba(87,214,121,1) !important;
}
.typeCheck view>text{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:40rpx;
  color:rgba(153,153,153,1);
}

.reason{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 48rpx;
}
.reason image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
  vertical-align: middle;
}
.reason text{
  height:40rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:40rpx;
  color:rgba(102,102,102,1);
}