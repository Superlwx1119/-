.box{
  background:rgba(245,245,245,1);
  padding-top: 24rpx;
  box-sizing: border-box;
  height: 100vh;

}
.background{
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 14rpx rgba(204,204,204,0.2);
  border-radius:16rpx;
  padding: 28rpx;
  width: 686rpx;
  box-sizing: border-box;
  margin: 0 auto;
  margin-bottom: 24rpx;
}
.title{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:40rpx;
  color:rgba(51,51,51,1);
}
.name{
  font-size:36rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:50rpx;
  color:rgba(51,51,51,1);
}
.image{
  width: 308rpx;
  height: 200rpx;
  margin: 11rpx;
}
.background view{
  display: flex;
  justify-content: space-between;
}
.shopName{
  display: flex;
  align-items: center;
  /* padding: 28rpx; */
  width: 686rpx;
  box-sizing: border-box;
  margin: 0 auto;
  margin-bottom: 24rpx;
}
.shopName image{
  width: 56rpx;
  height: 56rpx;
  margin-right: 10rpx;
  border-radius: 50%;
}

.shopMsg view{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 96rpx;
  border-bottom: 1px solid rgba(197,197,197,0.5019607843137255);
}
.shopMsg view:last-child{
  border: none;
}
.shopMsg view>text{
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:34rpx;
  color:rgba(102,102,102,1);
}
.shopMsg view>text:last-child{
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:34rpx;
  color:rgba(153,153,153,1);
}