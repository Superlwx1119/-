.box{
  background:rgba(245,245,245,1);
  padding-top: 24rpx;
  height: 100vh;
  box-sizing: border-box;
  padding-bottom: 88rpx;
}
.background{
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 14rpx rgba(204,204,204,0.2);
  border-radius:16rpx;
  padding: 28rpx;
  width: 686rpx;
  box-sizing: border-box;
  margin: 0 auto;
  margin-bottom: 24rpx;
}
.noGoods{
  height: 100vh;
  background:rgba(245,245,245,1);
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.noGoods image{
  width: 252rpx;
  height: 188rpx;
  margin-bottom: 24rpx;
}
.noGoods text{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:40rpx;
  color:rgba(153,153,153,1);
}
.noGoods button{
  width:332rpx;
  height:88rpx;
  border:2px solid rgba(87,214,121,1);
  opacity:1;
  border-radius:44rpx;
  padding: 0 !important;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:44rpx;
  color:rgba(87,214,121,1);
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 110rpx;
}
.goodsDetail{
  display: flex;
  align-items: center;
}
.goodsDetail>image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 52rpx;
}
.goodsMsg{
  display: flex;
  align-items: center;
  flex: 1;
}
.goodsMsg>image{
  width: 164rpx;
  height: 164rpx;
  margin-right: 20rpx;
}
.sku{
  font-size:20rpx !important;
  font-family:PingFang SC;
  font-weight:400;
  line-height:28rpx;
  display: inline-block;
  color:rgba(102,102,102,1);
}
.goodsMsg>view{
  display: flex;
  flex-direction: column;
  flex: 1;

}
.goodsMsg .num{
  display: flex;
  justify-content: space-between;
  flex: 1;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:34rpx;
  color:rgba(153,153,153,1);
}
.goodsMsg .name{
  font-size:28rpx !important;
  font-family:PingFang SC;
  font-weight:500;
  line-height:40rpx;
  display: inline-block;
  color:rgba(51,51,51,1);
  overflow: hidden;
  width: 300rpx;
  white-space: nowrap;
  text-overflow : ellipsis;
}
.foot{
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
  background: white;
  width: 100%;
  left: 0;
  height: 88rpx;
}
.foot image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
  margin-left: 32rpx;
  vertical-align: middle;
}
.foot view:first-child text{
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:28rpx;
  color:rgba(153,153,153,1);
}
.btnSure{
  width: 220rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background:rgba(87,214,121,1);
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:44rpx;
  color:rgba(255,255,255,1);
}