.box{
  padding-top: 14rpx;
  background:rgba(245,245,245,1);
  /* height: 100%; */
  box-sizing: border-box;
  overflow: hidden;
}
.weui-tabs{
  overflow: hidden;
  height: 70rpx;
}
.weui-tabs-bar__item{
  width: 50%;
  text-align: center;
  background:rgba(245,245,245,1) !important;
  border: 2px solid rgba(245,245,245,1);
}

.weui-tabs-bar__title,.tab-bar-title{
  font-size: 28rpx !important;
  padding-bottom: 10rpx !important;
}
.tab-content{
  display: flex;
}
.tab-bar-title__selected {
  color: #57D679;
}
.swiperClass{
  height: 82vh;
}
/* .current{
  height: 1015rpx;
} */
.orderList{
  width:686rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 14rpx rgba(204,204,204,0.2);
  border-radius:16rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  margin: 24rpx auto;
  position: relative;
  height: 266rpx;
}
.noGet{
  height: 354rpx !important;
}
.noPay{
  height: 312rpx !important;
}
.noGet .orderState view{
  /* background:rgba(168,230,112,1) !important; */
  color:rgba(43,163,255,1) !important; 
}
.noPay .orderState view{
  /* background:rgba(43,163,255,1) !important; */
  color:rgba(255,86,66,1) !important;
}
.orderState{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
}
.orderState view{
  width:104rpx;
  height:44rpx;
  /* background:rgba(87,214,121,1); */
  border-radius:22rpx;
  text-align: center;
  line-height: 44rpx;
  font-size:24rpx !important;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(87,214,121,1);
}
.orderState text{
  display: inline-block;
  height:40rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:40rpx;
  color:rgba(51,51,51,1);
}
.orderMsg{
  display: flex;
  justify-content: space-between;
  padding-top:32rpx;
  box-sizing: border-box;
  padding-bottom: 28rpx;
  border-top: 1px solid rgba(151,151,151,0.2);
}
.orderMsg image{
  width: 124rpx;
  height: 124rpx;
  margin-right: 20rpx;
}
.orderPrice{
  display: flex;
  
  flex-direction: column;
  justify-content: center;
}
.orderPrice text{
  height:28rpx;
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:28rpx;
  text-align: center;
  color:rgba(102,102,102,1) !important;
}
.orderPrice text:first-child{
  height:44rpx;
  font-size:32rpx;
  font-family:PingFangSC-Medium;
  line-height:44rpx;
  color:rgba(255,86,66,1) !important;
}
.orderCode{
  font-size:28rpx;
  height: 76rpx;
  line-height: 76rpx;
  font-family:PingFang SC;
  font-weight:400;
  display: inline-block;
  display: flex;
  align-items: center;
  width: 100%;
  color:rgba(51,51,51,1);
  border-top: 1px solid rgba(151,151,151,0.2);
}
.toPay{
  /* width:104rpx; */
  height:44rpx;
  border:1px solid rgba(87,214,121,1);
  border-radius:22rpx;
  font-size:20rpx;
  font-family:PingFang SC;
  box-sizing: border-box;
  font-weight:400;
  color:#57D679;
  display: flex;
  align-items: center;
  text-align: center;
  padding: 4rpx 32rpx;
  position: absolute;
  right: 24rpx;
  bottom: 28rpx;
}
.historyList{
  width:686rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 14rpx rgba(204,204,204,0.2);
  border-radius:16rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  margin: 24rpx auto;
  position: relative;
  height: 256rpx;
}
.historyList image{
  width: 104rpx;
  height: 104rpx;
  margin-right: 20rpx;
}
.historyList .orderState text:last-child{
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:28rpx;
  color:rgba(153,153,153,1);
}
.finish{
  height: 292rpx !important;
}
.finish .orderState text:last-child{
  color:rgba(87,214,121,1) !important;
}
.finishBtn{
  text-align: end;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  display: flex;
  
}
.finishBtn view{
  width:80rpx;
  height:32rpx;
  background:rgba(255,255,255,1);
  border:1px solid rgba(112,112,112,.7);
  opacity:1;
  border-radius:20rpx;
  color:rgba(102,102,102,.7);
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}


.complete{
  background: white !important;
  color:rgba(87,214,121,1) !important;
  font-size:20rpx !important;
}
.cancel{
  background: white !important;
  color:rgba(153,153,153,1)  !important;
  font-size:20rpx !important;
}
.noOrder{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
}
.noOrder image{
  width: 140rpx;
  height: 186rpx;
  margin-bottom: 24rpx;
}
.noOrder text{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:40rpx;
  color:rgba(153,153,153,1);
}