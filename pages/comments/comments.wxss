.box{
  background:rgba(245,245,245,1);
  padding-top: 24rpx;
  padding-bottom: 88rpx;
  box-sizing: border-box;
}
.background{
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 14rpx rgba(204,204,204,0.2);
  border-radius:16rpx;
  padding: 28rpx;
}
.comment{
  width: 686rpx;
  box-sizing: border-box;
  margin: 0 auto;
}
.goodsMsg{
  display: flex;
}
.goodsText{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.goodsText text:first-child{
  height:40rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  line-height:40rpx;
  color:rgba(51,51,51,1);
}
.goodsText text{
  height:28rpx;
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:28rpx;
  color:rgba(102,102,102,1);
  max-width: 440rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.goodsMsg image{
  width: 144rpx;
  height: 144rpx;
  margin-right: 20rpx;
}
.goodStars>view{
  display: flex;
  align-items: center;
}
.goodStars>view>text{
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:28rpx;
  color:rgba(153,153,153,1);
}
.selected{
  color:rgba(255,86,66,1) !important; 
}
.upBox{
  display: inline-block;
}
.star{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 30rpx 0;
}
.star view{
  display: flex;
  align-items: center;
  flex: 1;

}
.star image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}
.star text{
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
  display: inline-block;
  margin-right: 20rpx;
}
.text text{
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
  display: inline-block;
  margin-right: 20rpx;
}
.text textarea{
  font-size:20rpx;
  margin-top: 30rpx;
  background:rgba(204,204,204,0.2);
  padding: 24rpx 20rpx;
}
.upFiles{
  margin-top: 40rpx;
  font-size: 0;
}
.files{
  position: relative;
}
.closeFile{
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}
.files>image{
  margin: 10rpx;
  width:164rpx;
  height:164rpx;
  vertical-align: middle;
}
.doUpload{
  margin: 10rpx;
  width:164rpx;
  height:164rpx;
  background:rgba(255,255,255,1);
  border:1px dashed rgba(102,102,102,1);
  opacity:1;
  border-radius:6rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:28rpx;
  color:rgba(153,153,153,1);
}
.doUpload image{
  width: 40rpx;
  height: 40rpx;
}
.shopComments{
  width: 686rpx;
  box-sizing: border-box;
  margin: 46rpx auto;
}
.shopComments image{
  width: 40rpx;
  height: 40rpx;
  padding-right: 16rpx;
}
.textarea{
  font-size: 26rpx !important;
  width: auto !important;
}
.shopComments>text{
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
  display: inline-block;
  margin-right: 20rpx;
}
.shopComments view{
  display: flex;
  align-items: center;
  margin: 16rpx 0;
}
.shopComments view>text{
  display: inline-block;
  margin-right: 20rpx;
  font-size:22rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:28rpx;
  color:rgba(102,102,102,1);
}
.submit{
  width:560rpx;
  height:88rpx;
  background:rgba(87,214,121,1);
  opacity:1;
  border-radius:44rpx;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  left: 50%;
  bottom: 10rpx;
  transform: translateX(-50%);
}