.box{
  height: 100vh;
  padding-top: 24rpx;
  box-sizing: border-box;
  margin: 0 20rpx;
}
.map{
  width: 100%;
  height: 600rpx;
}
.shopMsg{
  display: flex;
  flex-direction: column;
}
.img{
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}
.img image{
  width: 56rpx;
  height: 56rpx;
  margin-right: 10rpx;
}
.img text{
  font-size:36rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:50rpx;
  color:rgba(51,51,51,1);
}
.scope{
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:22rpx;
  color:rgba(102,102,102,1);
  margin: 20rpx 0;
}
.address{
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:34rpx;
  color:rgba(102,102,102,1);
}